---
import { Image } from 'astro:assets';
import logoImg from '../assets/site_logo.png';

const navItems = [
  { label: 'Welcome!', href: '#hero' },
  { label: 'Why GradeAura', href: '#features' },
  // { label: 'Outcomes', href: '#' },
  { label: 'Our Tutors', href: '#patners' },
  { label: 'How to Book', href: '#howTo' },
];
---

<header class="bg-white shadow-md">
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    <a href="/" class="flex font-serif font-bold items-center">
      <Image 
        src={logoImg} 
        alt="Company Logo Image" 
        class="rounded-lg"
        width={60}
        height={60}
      />
      <span class="ml-2">GradeAura</span>
    </a>
    <nav class="hidden md:flex space-x-6">
      {navItems.map(item => (
        <a href={item.href} class="text-gray-700 hover:text-primary-500 transition duration-150 ease-in-out">
          {item.label}
        </a>
      ))}
    </nav>
    <a href="/#booking" class="bg-green-800 text-white px-4 py-2 rounded hover:bg-blue-950 transition duration-150 ease-in-out">
      Book Now!
    </a>
  </div>
</header>
