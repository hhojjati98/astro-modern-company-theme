---
import { FaCrown, FaMagic, FaCalendarAlt, FaDollarSign, FaUserGraduate } from 'react-icons/fa';

const features = [
  { icon: FaCrown, title: 'Elite Tutors' },
  { icon: FaMagic, title: 'Proven Results' },
  { icon: FaCalendarAlt, title: 'Flexible Scheduling' },
  { icon: FaDollarSign, title: 'Affordable Rates' },
  { icon: FaUserGraduate, title: 'Personalized Plans' },
];

---

<section class="bg-blue-950 py-20 text-white text-center" id="features">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-serif font-bold mb-4">Why We Stand Out: Your Best Choice!</h2>
    <p class="text-xl mb-12 max-w-2xl mx-auto">
      Find out why we're the top pick, offering incredible value and exceptional service that goes above and beyond.
    </p>

    <div class="bg-white text-blue-950 rounded-lg shadow-lg p-8">
      <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-8">
        {features.map((feature) => (
          <div class="flex flex-col items-center">
            <feature.icon className="w-16 h-16 mb-4" />
            <p class="text-sm font-semibold">{feature.title}</p>
          </div>
        ))}
      </div>
    </div>

    <p class="text-xl mt-12 mb-8 max-w-2xl mx-auto">
      Join us and experience the difference with a commitment to excellence that ensures your happiness every step of the way!
    </p>

    <a href="#booking" class="inline-block bg-white text-blue-950 font-bold py-3 px-8 rounded-full hover:bg-blue-100 transition duration-300">
      Book Your First Session Now!
    </a>
  </div>
</section>
