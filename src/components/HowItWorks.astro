---
import { FaCrown, FaMagic, FaCalendarAlt, FaDollarSign, FaUserGraduate } from 'react-icons/fa';

const steps = [
  {
    icon: 'M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z', // Placeholder SVG path for the first icon
    description: 'Take the first step towards your goals by filling out the form below. We\'re excited to learn more about you and how we can assist you on your journey. '
  },
  {
    icon: 'M21 3l-6 6m0 0V4m0 5h5M5 3a2 2 0 00-2 2v1c0 8.284 6.716 15 15 15h1a2 2 0 002-2v-3.28a1 1 0 00-.684-.948l-4.493-1.498a1 1 0 00-1.21.502l-1.13 2.257a11.042 11.042 0 01-5.516-5.517l2.257-1.128a1 1 0 00.502-1.21L9.228 3.683A1 1 0 008.279 3H5z', // Placeholder SVG path for the second icon
    description: 'Our team will reach out to you shortly via email or phone to better understand your needs and craft a personalized plan just for you.'
  },
  {
    icon: 'M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z', // Placeholder SVG path for the third icon
    description: 'A confirmation email will be sent to you shortly. We\'re excited to help you achieve academic success and reach your full potential!'
  }
];
---

<section class="py-20 bg-white" id="howTo">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-serif font-bold text-center mb-16">How to Start?</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {steps.map((step, index) => (
        <div class="bg-gray-50 p-8 rounded-lg text-center" id={`step-${index.toString()}`}>
          <svg class="w-16 h-16 mx-auto mb-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-inejoin="round" stroke-width={2} d={step.icon} />
          </svg>
          <p class="text-gray-700">{step.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
